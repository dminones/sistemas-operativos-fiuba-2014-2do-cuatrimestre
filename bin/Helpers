#!/bin/bash
pushd `dirname $0` > /dev/null
BINDIR=`pwd`
popd > /dev/null

PIDDIR=$BINDIR
LOGDIR=$BINDIR
NOVEDIR=$BINDIR/../novedir
ACEPDIR=$BINDIR/../acepdir

INITLOG=$LOGDIR"/ReceiptInit.log"

RECEIPT_PID_FILE=$PIDDIR"/RECEIPT_PID"
RECEIPT_LOG=$LOGDIR"/Receipt.log"

getFileContent() {
	if [ -f $1 ]; then
	  	echo $(<"$1")
	else
		echo 0
	fi
}

ReceiptPid=$(getFileContent $RECEIPT_PID_FILE)

Log(){
	echo $1 > $RECEIPT_LOG
}