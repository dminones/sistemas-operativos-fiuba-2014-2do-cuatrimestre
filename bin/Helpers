#!/bin/bash
. Logger

RECEPT="Recept"
FSOLDES="FSoldes"
CDOSSIER="Cdossier"
LISTE="Liste.pl"

PERL_PATH=/usr/bin/perl
BINDIR_PATH=$GRUPO$BINDIR
LOGDIR_PATH=$GRUPO$LOGDIR
NOVEDIR_PATH=$GRUPO$NOVEDIR
ACEPDIR_PATH=$GRUPO$ACEPDIR
RECHDIR_PATH=$GRUPO$RECHDIR
MAEDIR_PATH=$GRUPO$MAEDIR

RECEPT_LOG_NAME="Recept"
RECEPT_LOG="$LOGDIR_PATH/$RECEPT_LOG_NAME"

ERROR="[ERR]"

getFileContent() {
	if [ -f $1 ]; then
	  	echo $(<"$1")
	else
		echo 0
	fi
}

getProcessPid(){
	if [ $(ps cax | grep -c $1) -eq 1 ];then
		PROCESS_PID=$(pgrep "$1")
		echo "$PROCESS_PID"
	else
		echo "0"
	fi
}


logError(){
	log "$RECEPT_LOG" "$RECEPT" "[ERR]" "$1"
}

logInfo(){
	log "$RECEPT_LOG" "$RECEPT" "[INFO]" "$1"
}

logWarning(){
	log "$RECEPT_LOG" "$RECEPT" "[WARN]" "$1"
}

Log(){
	logInfo "$1"
}

# $1 Proceso a iniciar
initProcess(){
	estaCorriendo=1
	processPid=$(getProcessPid $1)
	if [ $processPid -eq 0 ]; then
		estaCorriendo=0
		if [ "$RECEPT" == "$1" ]; then
				initBackground $1
		else
			if [ "$LISTE" == "$1" ];then
					initPerl $1
			else
					initForeground $1
			fi
		fi
		processPid=$!
	fi
	CHILD_PID=$processPid
	if [ ! "$CHILD_PID" ]
	then
		CHILD_PID=0
	fi
	ESTA_CORRIENDO=$estaCorriendo
	return 0
}

initForeground(){
	$BINDIR_PATH/$1
}

initBackground(){
	$BINDIR_PATH/$1 &
}

initPerl(){
	$PERL_PATH $GRUPO/tp/$1
}


