#!/bin/bash
#. Logger

pushd `dirname $0` > /dev/null
BINDIR=`pwd`
popd > /dev/null

RECEPT="Recept"
FSOLDES="FSoldes"
CDOSSIERE="CDossiere"


PIDDIR=$BINDIR
LOGDIR=$BINDIR
NOVEDIR=$BINDIR/../novedir
ACEPDIR=$BINDIR/../acepdir

INITLOG=$LOGDIR"/ReceptInit.log"

RECEPT_PID_FILE=$PIDDIR"/RECEIPT_PID"
RECEPT_LOG=$LOGDIR"/Recept.log"

ERROR="[ERR]"

getFileContent() {
	if [ -f $1 ]; then
	  	echo $(<"$1")
	else
		echo 0
	fi
}

getProcessPid(){
	if [ "$(pgrep -f -o $1)" = "" ];then
			echo 0
	else
			pgrep -f -o $1
	fi
}

Log(){
	#log $RECEPT_LOG $RECEPT $ERROR $1
	echo $1 $RECEPT $ERROR > $RECEPT_LOG
}
