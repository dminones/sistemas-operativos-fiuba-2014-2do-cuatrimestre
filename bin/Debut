#!/bin/bash
# Debut: verifica si está corriendo Receipt y lo ejecuta si no está corriendo
. Helpers

if [ $ReceiptPid == 0 ]; then
    echo -n "Iniciando Receipt...   "
    $SCRIPTPATH/Receipt >$RECEIPT_LOG 2>&1 < /dev/null &
	myPid=$!
	echo $myPid > $RECEIPT_PID_FILE
	echo "[OK]"
else
	echo "Receipt ya está ejecutandose"
fi
